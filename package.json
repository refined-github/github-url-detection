{
	"name": "github-url-detection",
	"version": "5.7.1",
	"description": "Which GitHub page are you on? Is it an issue? Is it a list? Perfect for your WebExtension or userscript.",
	"keywords": [
		"github",
		"page",
		"routes",
		"detect",
		"test",
		"extension"
	],
	"repository": "fregante/github-url-detection",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"sideEffects": false,
	"type": "module",
	"main": "distribution/index.js",
	"module": "distribution/index.js",
	"files": [
		"distribution/index.js",
		"distribution/index.d.ts"
	],
	"scripts": {
		"ava": "ava --timeout 30s",
		"build": "rollup -c",
		"demo:build": "parcel build --public-url ./ --out-dir demo/dist demo/index.html",
		"demo:test": "svelte-check",
		"demo:watch": "parcel --out-dir demo/dist demo/index.html",
		"prepack": "rollup -c",
		"test": "run-p build ava xo",
		"watch": "rollup -c --watch",
		"xo": "xo"
	},
	"browserslist": [
		"last 2 versions",
		"not IE <= 11"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"ignore": [
			"demo"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"rules": {
					"ava/assertion-arguments": "off",
					"@typescript-eslint/dot-notation": "off",
					"@typescript-eslint/no-non-null-assertion": "off",
					"@typescript-eslint/no-unsafe-member-access": "off",
					"@typescript-eslint/no-non-null-asserted-optional-chain": "off",
					"@typescript-eslint/comma-dangle": [
						"error",
						"always-multiline"
					]
				}
			}
		],
		"rules": {
			"camelcase": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"import/extensions": "off",
			"import/no-useless-path-segments": "off",
			"unicorn/import-index": "off"
		}
	},
	"ava": {
		"environmentVariables": {
			"TS_NODE_FILES": "true",
			"TS_NODE_COMPILER_OPTIONS": "{\"module\": \"esnext\", \"allowSyntheticDefaultImports\": true}"
		},
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm",
			"--experimental-specifier-resolution=node"
		],
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		}
	},
	"devDependencies": {
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.5",
		"@rollup/plugin-typescript": "^8.2.5",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/jsdom": "^16.2.13",
		"ava": "^3.15.0",
		"github-reserved-names": "^2.0.4",
		"jsdom": "^17.0.0",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"parcel-plugin-svelte": "^4.0.9",
		"rollup": "^2.57.0",
		"rollup-plugin-terser": "^7.0.2",
		"strip-indent": "^4.0.0",
		"svelte": "^3.43.0",
		"svelte-check": "^2.2.6",
		"ts-node": "^10.2.1",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3",
		"xo": "^0.44.0"
	},
	"engines": {
		"node": ">=12"
	}
}
