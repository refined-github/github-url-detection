{
	"name": "github-url-detection",
	"version": "5.13.0",
	"description": "Which GitHub page are you on? Is it an issue? Is it a list? Perfect for your WebExtension or userscript.",
	"keywords": [
		"github",
		"page",
		"routes",
		"detect",
		"test",
		"extension"
	],
	"repository": "refined-github/github-url-detection",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"sideEffects": false,
	"type": "module",
	"main": "distribution/index.js",
	"module": "distribution/index.js",
	"files": [
		"distribution/index.js",
		"distribution/index.d.ts"
	],
	"scripts": {
		"ava": "ava --timeout 30s",
		"build": "vite build",
		"demo:build": "vite build demo --config demo/vite.config.js",
		"demo:test": "svelte-check",
		"demo:watch": "vite demo --config demo/vite.config.js",
		"prepack": "vite build",
		"test": "run-p build ava xo",
		"watch": "vite",
		"xo": "xo"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignore": [
			"demo"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"rules": {
					"ava/assertion-arguments": "off",
					"@typescript-eslint/dot-notation": "off",
					"@typescript-eslint/no-non-null-assertion": "off",
					"@typescript-eslint/no-unsafe-member-access": "off",
					"@typescript-eslint/no-non-null-asserted-optional-chain": "off",
					"@typescript-eslint/naming-convention": "off",
					"node/prefer-global/process": "off"
				}
			}
		],
		"rules": {
			"camelcase": "off"
		}
	},
	"ava": {
		"environmentVariables": {
			"TS_NODE_FILES": "true"
		},
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm",
			"--experimental-specifier-resolution=node"
		]
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^1.0.1",
		"@types/jsdom": "^16.2.14",
		"ava": "^4.3.1",
		"github-reserved-names": "^2.0.4",
		"jsdom": "^20.0.0",
		"npm-run-all": "^4.1.5",
		"parse5": "^7.0.0",
		"strip-indent": "^4.0.0",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"ts-node": "^10.4.0",
		"tslib": "^2.4.0",
		"typescript": "^4.5.2",
		"vite": "^3.0.2",
		"xo": "^0.49.0"
	},
	"engines": {
		"node": ">=12"
	}
}
