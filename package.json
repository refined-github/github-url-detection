{
	"name": "github-url-detection",
	"version": "8.1.0",
	"description": "Which GitHub page are you on? Is it an issue? Is it a list? Perfect for your WebExtension or userscript.",
	"keywords": [
		"github",
		"page",
		"routes",
		"detect",
		"test",
		"extension"
	],
	"repository": "refined-github/github-url-detection",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"sideEffects": false,
	"type": "module",
	"exports": "./distribution/index.js",
	"main": "./distribution/index.js",
	"types": "./distribution/index.d.ts",
	"files": [
		"distribution/index.js",
		"distribution/index.d.ts"
	],
	"scripts": {
		"build": "run-p build:*",
		"build:vite": "vite build",
		"build:typescript": "tsc --declaration --emitDeclarationOnly",
		"demo:build": "vite build demo",
		"demo:test": "svelte-check",
		"demo:watch": "vite preview demo & vite build demo --watch # vite serve isn't real",
		"prepack": "npm run build",
		"test": "run-p build test:unit xo",
		"test:unit": "bun test",
		"watch": "run-p watch:typescript demo:watch # vite watch doesnâ€™t generate the lib, so just use the demo",
		"watch:typescript": "tsc --watch --noEmit",
		"watch:test:unit": "run-p 'test:unit -- --watch' 'watch:typescript -- --watch'",
		"xo": "xo"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"rules": {
					"@typescript-eslint/triple-slash-reference": "off",
					"@typescript-eslint/dot-notation": "off",
					"@typescript-eslint/no-non-null-assertion": "off",
					"@typescript-eslint/no-unsafe-member-access": "off",
					"@typescript-eslint/no-non-null-asserted-optional-chain": "off",
					"@typescript-eslint/naming-convention": "off",
					"n/prefer-global/process": "off"
				}
			}
		],
		"rules": {
			"camelcase": "off"
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^4.0.0",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"bun": "^1.0.3",
		"bun-types": "^1.0.3",
		"github-reserved-names": "^2.0.5",
		"npm-run-all": "^4.1.5",
		"strip-indent": "^4.0.0",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"xo": "^0.56.0"
	},
	"engines": {
		"node": ">=18"
	}
}
