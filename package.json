{
	"name": "github-url-detection",
	"version": "4.5.2",
	"description": "Which GitHub page are you on? Is it an issue? Is it a list? Perfect for your WebExtension or userscript.",
	"keywords": [
		"github",
		"page",
		"routes",
		"detect",
		"test",
		"extension"
	],
	"repository": "fregante/github-url-detection",
	"license": "MIT",
	"author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
	"exports": {
		"import": "./esm/index.js",
		"require": "./index.js"
	},
	"main": "cjs/index.js",
	"module": "esm/index.js",
	"files": [
		"cjs/index.js",
		"cjs/index.d.ts",
		"esm/index.js",
		"esm/index.d.ts"
	],
	"scripts": {
		"ava": "TS_NODE_COMPILER_OPTIONS='{\"esModuleInterop\": true}' ava --timeout 30s",
		"build": "rollup -c",
		"demo:build": "parcel build --public-url ./ demo/index.html",
		"demo:test": "svelte-check",
		"demo:watch": "parcel demo/index.html",
		"prepack": "rollup -c",
		"test": "run-p build ava xo",
		"watch": "rollup -c --watch",
		"xo": "xo"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignore": [
			"demo"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"rules": {
					"@typescript-eslint/no-unnecessary-condition": "error",
					"@typescript-eslint/comma-dangle": [
						"error",
						"always-multiline"
					]
				}
			}
		],
		"rules": {
			"camelcase": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"import/extensions": "off",
			"import/no-useless-path-segments": "off",
			"unicorn/import-index": "off"
		}
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"esm",
			"ts-node/register"
		]
	},
	"devDependencies": {
		"@babel/polyfill": "^7.12.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-typescript": "^8.1.0",
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/jsdom": "^16.2.5",
		"ava": "^3.14.0",
		"esm": "^3.2.25",
		"github-reserved-names": "^2.0.4",
		"jsdom": "^16.4.0",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"parcel-plugin-svelte": "^4.0.6",
		"rollup": "^2.35.1",
		"rollup-plugin-terser": "^7.0.2",
		"strip-indent": "^3.0.0",
		"svelte": "^3.31.0",
		"svelte-check": "^1.1.22",
		"ts-node": "^9.1.1",
		"tslib": "^2.0.3",
		"typescript": "^4.1.3",
		"xo": "^0.36.1"
	}
}
