{
	"name": "github-url-detection",
	"version": "8.1.1",
	"description": "Which GitHub page are you on? Is it an issue? Is it a list? Perfect for your WebExtension or userscript.",
	"keywords": [
		"github",
		"page",
		"routes",
		"detect",
		"test",
		"extension"
	],
	"repository": "refined-github/github-url-detection",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"sideEffects": false,
	"type": "module",
	"exports": "./distribution/index.js",
	"main": "./distribution/index.js",
	"types": "./distribution/index.d.ts",
	"files": [
		"distribution/index.js",
		"distribution/index.d.ts"
	],
	"scripts": {
		"build": "run-p build:*",
		"build:vite": "vite build",
		"build:typescript": "tsc --declaration --emitDeclarationOnly",
		"demo:build": "VITE_KEEP_URLS=1 vite build demo",
		"demo:test": "svelte-check",
		"demo:watch": "vite preview demo & npm run demo:build -- --watch # vite serve isn't real",
		"prepack": "npm run build",
		"test": "run-p build test:unit xo",
		"test:unit": "VITE_KEEP_URLS=1 vitest",
		"watch": "run-p watch:typescript demo:watch # vite watch doesnâ€™t generate the lib, so just use the demo",
		"watch:typescript": "tsc --watch",
		"watch:test:unit": "run-p 'test:unit -- --watch' 'watch:typescript -- --watch'",
		"xo": "xo"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"rules": {
					"@typescript-eslint/triple-slash-reference": "off",
					"@typescript-eslint/naming-convention": "off",
					"no-unused-labels": "off",
					"no-labels": "off"
				}
			}
		]
	},
	"dependencies": {
		"github-reserved-names": "^2.0.5"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^5.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"esbuild": "^0.21.5",
		"npm-run-all": "^4.1.5",
		"strip-indent": "^4.0.0",
		"svelte": "^4.2.17",
		"svelte-check": "^3.8.0",
		"typescript": "^5.4.5",
		"vite": "^5.2.12",
		"vitest": "^1.6.0",
		"xo": "^0.58.0"
	},
	"engines": {
		"node": ">=20.10"
	}
}
